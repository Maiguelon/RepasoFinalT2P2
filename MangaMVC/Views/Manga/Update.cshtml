@model TiendaManga.ViewModels.MangaUpdateViewModel 

@{
    ViewData["Title"] = "Modificar Manga";
}

<h2 class="mt-4">Editar Manga</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input type="hidden" asp-for="Id" /> 
            
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span> 
            </div>
            
            <div class="form-group">
                <label asp-for="TomosPublicados" class="control-label"></label>
                <input asp-for="TomosPublicados" class="form-control" />
                <span asp-validation-for="TomosPublicados" class="text-danger"></span> 
            </div>

            @* 2. EL MACHETE: El selector desplegable conectado a la SelectList *@
            <div class="form-group">
                <label asp-for="Demografia" class="control-label"></label>
                <select asp-for="Demografia" asp-items="Model.ListaDemografias" class="form-control">
                    <option value="">-- Seleccione una Demografia --</option>
                </select>
                <span asp-validation-for="Demografia" class="text-danger"></span> 
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}